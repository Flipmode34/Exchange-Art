@model Exchange_Art.Models.ArtLease

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete ArtLease</title>
</head>
<body>

<h2 class="bg-dark text-light rounded text-center">Are you sure?</h2>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            ArtImage
        </dt>
        <dd class="col-sm-10">
            @{
                var base64 = Convert.ToBase64String(Model.ArtPieceImageData);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            <div class="media">
                <img class="align-self-start mr-3 img-fluid rounded" src="@imgSrc" alt="model.ImageTitle" width="192px" height="108px">
            </div>
        </dd>
        <dt class="col-sm-2">
            ArtDescription
        </dt>
        <dd class="col-sm-10">
            @Model.ArtDescription
        </dd>
        <dt class="col-sm-2">
            Art Owner
        </dt>
        <dd class="col-sm-10">
            @Model.OwnerName
        </dd>
        <dt class="col-sm-2">
            Name Leaser
        </dt>
        <dd class="col-sm-10">
            @Model.LeaserName
        </dd>
        <dt class="col-sm-2">
            Expires
        </dt>
        <dd class="col-sm-10">
            @Model.DateLeaseEnds
        </dd>
    </dl>
    
    <form asp-action="DeleteLease">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Leases">Back to List</a>
    </form>
</div>
</body>
</html>
