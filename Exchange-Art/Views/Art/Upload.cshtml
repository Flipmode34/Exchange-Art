@model IEnumerable<Exchange_Art.Models.Art>

<h1 class="bg-dark text-white">Upload Art</h1>

<form asp-action="UploadArt" asp-controller="Art" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <!--Select file to upload-->
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Upload</span>
            </div>
            <div class="custom-file">
                <label class="custom-file-label" for="file1">Click me to choose file</label>
                <input type="file" class="custom-file-input" id="file1" name="file1">
            </div>
        </div>
        <br />
        <!--Set title-->
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Title</span>
            </div>
            <input type="text" class="form-control" id="title1" name="title1" placeholder="...">
        </div>
        <br />
        <!--Set description-->
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">Description</span>
            </div>
            <textarea type="text" class="form-control" id="description1" name="description1" placeholder="..."></textarea>
        </div>
        <br />
        <button class="btn btn-primary" type="submit">Upload File</button>
    </div>
</form>

<h1>@ViewBag.Message</h1>
<h1>@ViewBag.ImageTitle</h1>
<img src="@ViewBag.ImageDataUrl" class="img-fluid" />
<br />
<br />
<form asp-action="RetrieveArt" asp-controller="Art" method="post">
    <div class="form-group">
        <button class="btn btn-secondary" type="submit">Show Latest Art image uploaded</button>
    </div>
</form>
