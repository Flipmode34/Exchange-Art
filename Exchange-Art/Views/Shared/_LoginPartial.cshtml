@using Microsoft.AspNetCore.Identity
@using Exchange_Art.Data.Entities;
@using System.Security.Claims;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item">
        <!--Get User Id of logged in user, for use in Anchor element below-->
        @{
            var userId = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Update" asp-route-id="@userId" title="Update">Hello @User.Identity.Name!</a>
        }


    </li>
        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
            </li>
        }
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Create">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
